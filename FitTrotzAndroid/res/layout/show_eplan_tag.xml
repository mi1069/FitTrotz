<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EplanFragment"
     android:background="@color/background" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="293dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:stretchColumns="0,1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ernährungsplan"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="90" >

            <Button
                android:id="@+id/nbt_Tag"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:background="@color/bisque"
                android:text="Tag" />

            <Button
                android:id="@+id/nbt_Woche"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="Woche" 
                 android:background="@color/button"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableLayout6"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:orientation="vertical" >

            <!--
                     <Button
                    android:id="@+id/btn_kalorien"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onNavButtonClick"
                    android:text="Pedometer" />
            -->

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="348dp"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="179dp" >

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/bisque"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.05"
                            android:text="Frühstück"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/breakCal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.64" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.68"
                            android:text="Kalorien" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0.48"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/bMeal1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/bMeal2"
                            android:layout_width="match_parent"
                            android:layout_height="86dp" />
                    </LinearLayout>
                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="162dp" >

                    <LinearLayout
                        android:id="@+id/tableLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:background="@color/bisque" >

                        <TextView
                            android:id="@+id/act_creater"
                            android:layout_width="151dp"
                            android:layout_height="wrap_content"
                            android:text="Mittagessen"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/lunchCal"
                            android:layout_width="39dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.57"
                            android:text="Kalorien" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tableLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/lMeal1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/lMeal2"
                            android:layout_width="match_parent"
                            android:layout_height="97dp" />
                    </LinearLayout>
                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="278dp" >

                    <LinearLayout
                        android:id="@+id/tableLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal" 
                        android:background="@color/bisque">

                        <TextView
                            android:id="@+id/act_creater"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:text="Abendessen"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/dinnerCal"
                            android:layout_width="38dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.37"
                            android:text="Kalorien" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tableLayout8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6.65"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/dMeal1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/dMeal2"
                            android:layout_width="match_parent"
                            android:layout_height="72dp" />
                    </LinearLayout>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </TableLayout>

</RelativeLayout>