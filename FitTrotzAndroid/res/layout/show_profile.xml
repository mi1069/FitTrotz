<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShowProfileActivity" 
    android:background="@color/background">

    <TextView
        android:id="@+id/textview4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview5"
        android:layout_alignLeft="@+id/textview5"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="38dp"
        android:text="Größe in cm"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview4"
        android:layout_marginBottom="30dp"
        android:text="Gewicht in Kg"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/act_creater"
        android:layout_alignLeft="@+id/textview3"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/act_creater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview3"
        android:layout_alignLeft="@+id/textview3"
        android:layout_marginBottom="34dp"
        android:layout_marginTop="30dp"
        android:text="Alter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/userage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview3"
        android:layout_alignLeft="@+id/act_creater"
        android:layout_marginBottom="14dp" 
        android:text="TextView"/>

    <TextView
        android:id="@+id/userweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview4"
        android:layout_alignRight="@+id/bMeal2"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/userheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview5"
        android:layout_alignLeft="@+id/textview4"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/userdisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview7"
        android:layout_alignTop="@+id/textview7"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textview5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userbmi"
        android:layout_alignLeft="@+id/textview7"
        android:text="BMI"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textview7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:text="Krankheit"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:text="TextView"
        android:layout_below="@+id/textView1" />

    <TextView
        android:id="@+id/userbmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userdisease"
        android:layout_alignLeft="@+id/textview5"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView1"
        android:text="Profil"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/userdisease"
        android:layout_below="@+id/userdisease"
        android:layout_marginRight="44dp"
        android:background="@color/button"
        android:onClick="onClick"
        android:text="Edit Profile" />

</RelativeLayout>