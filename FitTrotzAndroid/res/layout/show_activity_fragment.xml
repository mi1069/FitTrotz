<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="@color/background">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.46"
        android:text="Aktivitäten"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.71"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_joinact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Pedometer" 
             android:background="@color/button"/>

        <TextView
            android:id="@+id/act_creater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_user_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deine Aktivitäten" 
            android:onClick="onClick"
             android:background="@color/button"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_search_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partner suchen" 
            android:onClick="onClick"
             android:background="@color/button"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <Button
            android:id="@+id/btn_addActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neue Aktivität erstellen"
            android:onClick="onClick" 
             android:background="@color/button"/>
    </LinearLayout>

</LinearLayout>
